{
  "name": "iot-core/pdo-class-database",
  "description": "Lightweight PDO wrapper with CRUD, transactions, batch operations, and query builder support.",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "iotcore",
      "email": "iotcore@hotmail.com"
    }
  ],
  "keywords": ["pdo", "database", "query-builder", "orm", "php"],
  "homepage": "https://github.com/iot-core/pdo-class-database",
  "support": {
    "issues": "https://github.com/iot-core/pdo-class-database/issues",
    "source": "https://github.com/iot-core/pdo-class-database"
  },
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "IoTCore\\Database\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}

